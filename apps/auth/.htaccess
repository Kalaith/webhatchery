RewriteEngine On

# Set the base path
RewriteBase /auth/

# Route API requests to backend (handle both 'backend' and 'api' folder names)
RewriteCond %{REQUEST_URI} ^/auth/api/
RewriteCond %{DOCUMENT_ROOT}/auth/backend/public/index.php -f
RewriteRule ^api/(.*)$ backend/public/index.php [QSA,L]

RewriteCond %{REQUEST_URI} ^/auth/api/
RewriteCond %{DOCUMENT_ROOT}/auth/api/public/index.php -f
RewriteRule ^api/(.*)$ api/public/index.php [QSA,L]

# Handle client-side routing for React app
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/auth/backend/
RewriteCond %{REQUEST_URI} !^/auth/api/
RewriteRule . index.html [L]
